- provide(:title, "#{@story.title}")
#wrap
  = render 'shared/header'
  = render 'shared/breadcrumbs'
  .story-container
    %main.content
      %article#story
        .company
          = link_to root_path do
            .image
              = image_tag(@story.company_logo)
              %figcaption= @story.company_name
        %h1= @story.title
        .intro= @story.intro
        .socials
          %ul
            %li.facebook
              = link_to "f", "#"
            %li.eight
              = link_to "8", "#"
            %li.twitter
              = link_to "鳥", "#"
            %li.hatena
              = link_to "B!", "#"
            %li.pocket
              = link_to "P", "#"
        = render partial: 'shared/topic', collection: @story.topics
        %section.story-footer
          .socials
            %ul
              %li.facebook.round
                = link_to "f", "#"
              %li.eight.round
                = link_to "8", "#"
              %li.twitter.round
                = link_to "鳥", "#"
              %li.hatena.round
                = link_to "B!", "#"
              %li.pocket.round
                = link_to "P", "#"
          .info
            .tags
              = link_to "Text by PR Table", "#"
              = link_to "社員・職員", "#"
            %date 2016.10.26
          .profile
            .company-info{style: "background-image: url(#{asset_path(@story.cover_image)});"}
              .background
              .company-wrap
                .company-head
                  .company-logo
                    .figure
                      .image
                        = image_tag(@story.company_logo)
                      .figcaption= @story.company_name
                  .link
                    = link_to "> この会社について", "#"
                .buttons
                  %ul
                    %li
                      =link_to "取材したい", "#", class:"coverage"
            .other-story
              - @story.user.stories.each do |story|
                %article
                  = link_to story_path(story) do
                    .story-image{style: "background-image: url(#{asset_path(story.image)});"}
                    .title= story.title
                    %p= story.company_name
  = render 'shared/footer'
