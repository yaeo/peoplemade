  editor = new Dante.Editor(
    {
      el: "#editor",
      upload_url: "/uploads.json", //it expect an url string in response like /your/server/image.jpg or http://app.com/images/image.jpg
      disable_title: "true",
      upload_callback: function(data)
        {
            return data.link;
        },
    }
  );
  editor.start()
